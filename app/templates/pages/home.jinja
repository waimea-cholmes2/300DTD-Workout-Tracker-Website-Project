{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block content %}

    {% if session.user_id %}

      <article>

        <ul>
        
        <h1>Exercises</h1>

            {% for exercise in exercises %}

                <li>

                    <p class="exercises">

                        <a href="/exercise/{{ exercise.id }}">{{exercise.name}}</a>
                        
                    </p>
                    
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>

    {% else %}

    <p>Please Login or Register to Continue</p>

    {% endif %}

{% endblock %}

