{#=====================================================
Home page
- Hero style greeting banner
- List of things passed in as 'things' array
- Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

Home Page

{% endblock %}


{% block content %}



{% if session.user_id %}

<a role="button" href="#add-workout">Add Exercise</a>

<article>

    <ul>

        <h1>Exercises</h1>

        <h2>Favourites</h2> 
        
        <h3 class="*">* - Owned</h3>

        {% for exercise in exercises if exercise.id in favourites %}

        <li>
            <p class="exercises">
                {%if exercise.owner_id == session.user_id%} * - {%endif%}<a href="/exercise/{{ exercise.id }}">{{exercise.name}}</a> 
            </p>
        </li>

        {% else %}

        <p>None!</p>

        {% endfor %}

        <h2>Owned</h2>
        {% for exercise in exercises if exercise.owner_id == session.user_id %}

        <li>
            <p class="exercises">
                <a href="/exercise/{{ exercise.id }}">{{exercise.name}}</a> 
            </p>
        </li>

        {% else %}

        <p>None!</p>

        {% endfor %}

        <h2>Others</h2>

        {% for exercise in exercises if exercise.id not in favourites and exercise.owner_id != session.user_id %}

        <li>
            <p class="exercises">
                <a href="/exercise/{{ exercise.id }}">{{exercise.name}}</a> 
            </p>
        </li>

        {% else %}

        <p>None!</p>

        {% endfor %}
    </ul>

</article>

<article>

    <h3>Add a New Exercise</h3>

    <form action="/add-exercise" method="POST">

        <input type="text" name="name" placeholder="Name of New Exercise" required>

        <input type="text" name="description" placeholder="Exercise Description" required>

        <button>Add</button>

    </form>

</article>

{# This is where the add a workout button goes, dragging the user down to the form #}
<div id="add-workout"></div>

{% else %}

<p>Please <a href="/login">Login</a> or <a href="/register">Register</a> to Continue</p>

{% endif %}

{% endblock %}