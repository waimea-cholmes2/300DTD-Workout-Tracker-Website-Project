{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Home Page

{% endblock %}


{% block content %}

    {% if session.user_id %}

      <article>

        <ul>
        
        <h1>Exercises</h1>

            {% for exercise in exercises %}

                <li>
                    <p class="exercises">
                        <a href="/exercise/{{ exercise.id }}">{{exercise.name}}</a>  
                    </p>  
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>

    <article>

            <h3>Add a New Exercise</h3>

            <form action="/add-exercise" method="POST">

                <input
                    type="text"
                    name="name"
                    placeholder="Name of New Exercise"
                    required
                >

                <input
                    type="text"
                    name="description"
                    placeholder="Exercise Description"
                    required
                >

                <button>Add</button>

            </form>

        </article>

    {% else %}

    <p>Please <a href="/login">Login</a> or <a href="/register">Register</a> to Continue</p>

    {% endif %}

{% endblock %}

