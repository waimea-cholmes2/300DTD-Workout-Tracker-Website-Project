{% extends 'pages/base.jinja' %}


{% block title %}

    Add Workout

{% endblock %}


{% block content %}

    <article>

        <header>
            <h2>Add a Workout</h2>
        </header>

        <form action="/add-workout/<int:exercise_id>" method="POST">

            <input
                type="text"
                name="sets"
                placeholder="Sets"
                required
            >

            <input
                type="text"
                name="reps"
                placeholder="Reps"
                required
            >

            <input
                type="date"
                name="date"
                placeholder="Date"
                required
            >

            <input
                type="text"
                name="weight"
                placeholder="Weight(Kg)"
                required
            >

            <button>Add Workout</button>

        </form>

    </article>

{% endblock %}

